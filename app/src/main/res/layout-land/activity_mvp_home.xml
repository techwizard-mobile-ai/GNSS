<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".activities.truck.THomeActivity">

  <TextView
    android:id="@+id/mvp_main_title"
    style="@style/activity_title"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="@string/select_action" />

  <LinearLayout
    android:id="@+id/mvp_main_settings_layout"
    style="@style/default_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/mvp_main_logout"
    android:layout_below="@id/mvp_main_title"
    android:layout_centerInParent="true"
    android:layout_marginBottom="@dimen/_1sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.5"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/mvp_main_taputapu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:padding="@dimen/_14sdp"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:scaleType="fitCenter" />

      <Button
        android:id="@+id/mvp_main_taputapu1"
        style="@style/next_button_single"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="@string/mapping" />
    </RelativeLayout>

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.5"
      android:layout_alignParentTop="true"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/mvp_main_portal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="fitCenter" />

      <Button
        android:id="@+id/mvp_main_portal1"
        style="@style/next_button_single"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="@string/viewing" />
    </RelativeLayout>


  </LinearLayout>

  <Button
    android:id="@+id/mvp_main_logout"
    style="@style/next_button_single"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/_5sdp" />
</RelativeLayout>

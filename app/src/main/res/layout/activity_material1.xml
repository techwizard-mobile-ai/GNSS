<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_10sdp"
        tools:context=".activities.common.Material1Activity">

        <TextView
                android:id="@+id/ematerial1_title"
                style="@style/activity_title"
                android:text="Select Material"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
        />
        <GridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/em_gridview"
                android:layout_below="@id/ematerial1_title"
                android:layout_above="@id/ematerial1_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="@dimen/_120sdp"
                android:numColumns="auto_fit"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>

        <Button
                android:id="@+id/ematerial1_back"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                style="@style/back_button_single"

        />
</RelativeLayout>
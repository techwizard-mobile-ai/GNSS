<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activities.truck.THomeActivity">

    <TextView style="@style/activity_title"
              android:text="Select Action"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            style="@style/default_linearlayout">

        <Button
                android:id="@+id/thome_unload"
                style="@style/back_button"
                android:text="Unload"
                android:layout_width="0dp"
                android:layout_weight=".3"
        />
        <Button
                android:id="@+id/thome_load"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/next_button"
                android:layout_marginEnd="0dp"
                android:text="Load"
        />
    </LinearLayout>
</LinearLayout>
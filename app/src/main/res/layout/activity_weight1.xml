<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.common.Weight1Activity">

    <TextView style="@style/activity_title"
              android:text="Material Weight (Tonnes)"
    />

    <EditText
            android:id="@+id/sload_weight"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/black"
            style="@style/et_background"

            android:inputType="numberDecimal"
            android:layout_marginTop="@dimen/_1sdp"
            android:hint="Material Weight"
    />

    <Button
            android:id="@+id/w1_next"
            style="@style/next_button"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="@string/next"
    />

</LinearLayout>
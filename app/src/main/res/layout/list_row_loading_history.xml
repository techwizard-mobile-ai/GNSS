<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp"
            style="?attr/cardStyle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                    android:id="@+id/lhr_trip_number_layout"
                    style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Trip Number"
                    />
                <TextView
                    android:id="@+id/lhr_trip_number"
                    style="@style/load_history_desc"
                    android:text=":  1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_trip_type_layout"
                    style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Trip Type"
                    />
                <TextView
                    android:id="@+id/lhr_trip_type"
                    style="@style/load_history_desc"
                    android:text=":  Back Load"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_trip0_layout"
                    style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Load Trip Number"
                    />
                <TextView
                    android:id="@+id/lhr_trip0_id"
                    style="@style/load_history_desc"
                    android:text=":  Back Load"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loading_machine_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Loading Machine"
                    />
                <TextView
                    android:id="@+id/lhr_loading_machine"
                    style="@style/load_history_desc"
                    android:text=":  Excavator 1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loaded_material_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Material"
                    />
                <TextView
                    android:id="@+id/lhr_loaded_material"
                    style="@style/load_history_desc"
                    android:text=":  Material"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loading_location_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Location"
                    />
                <TextView
                    android:id="@+id/lhr_loading_location"
                    style="@style/load_history_desc"
                    android:text=":  Location 1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_gps_loading_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Loading GPS"
                    />
                <TextView
                    android:id="@+id/lhr_gps_loading"
                    style="@style/load_history_desc"
                    android:text=":  Location 1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_gps_unloading_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Unloading GPS"
                    />
                <TextView
                    android:id="@+id/lhr_gps_unloading"
                    style="@style/load_history_desc"
                    android:text=":  Location 1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loading_weight_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Weight (Tonnes)"
                    />
                <TextView
                    android:id="@+id/lhr_loading_weight"
                    style="@style/load_history_desc"
                    android:text=":  Weight1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_task_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Task"
                    />
                <TextView
                    android:id="@+id/lhr_task"
                    style="@style/load_history_desc"
                    android:text=":  Weight1"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_time_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Trip Time"
                    />
                <TextView
                    android:id="@+id/lhr_time"
                    style="@style/load_history_desc"
                    android:text=":  Morning 7am - 12am"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_duration_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Trip Duration"
                    />
                <TextView
                    android:id="@+id/lhr_duration"
                    style="@style/load_history_desc"
                    android:text=":  Morning 7am - 12am"
                    />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_workmode_layout"
                style="@style/load_history_row_item"
                >
                <TextView
                    style="@style/load_history_text"
                    android:text="Work Mode"
                    />
                <TextView
                    android:id="@+id/lhr_workmode"
                    style="@style/load_history_desc"
                    android:text=":  Morning 7am - 12am"
                    />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>

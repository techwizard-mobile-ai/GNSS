            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lhr_record_number_layout"
                style="@style/load_history_row_item">

                <TextView
                    style="@style/load_history_text"
                    android:text="@string/id" />

                <TextView
                    android:id="@+id/lhr_record_number"
                    style="@style/load_history_desc"
                    android:text="@string/list_row_eload_history_lhr_record_number_text" />
            </LinearLayout>

            <LinearLayout

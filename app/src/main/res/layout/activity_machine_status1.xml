<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.common.Location1Activity">

    <TextView
            android:id="@+id/machine_status_title"
            style="@style/activity_title"
            android:text="Select Machine Stop Reason"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
    />
    <LinearLayout
            android:layout_below="@id/machine_status_title"
            android:id="@+id/machine_start_layout"
            android:visibility="gone"
            style="@style/default_linearlayout">

        <TextView
                android:id="@+id/machine_stopped_reason"
                style="@style/activity_title"
                android:text="Machine Stopped Reason"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
        />
        <Button
                android:id="@+id/machine_status_start"
                style="@style/next_button"
                android:layout_marginTop="@dimen/_50sdp"
                android:text="Start Machine"
        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/machine_status_rv"
            android:layout_below="@id/machine_status_title"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:layout_height="wrap_content"/>
    <!--
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/machinestatus_gridview"
              android:layout_below="@id/machine_status_title"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:columnWidth="@dimen/_120sdp"
              android:numColumns="auto_fit"
              android:verticalSpacing="0dp"
              android:horizontalSpacing="0dp"
              android:layout_margin="@dimen/_5sdp"
              android:stretchMode="columnWidth"
              android:gravity="center"/>-->
</LinearLayout>
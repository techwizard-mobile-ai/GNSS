<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.scrapper.SHomeActivity">

    <TextView
            style="@style/activity_title"
            android:layout_centerHorizontal="true"
            android:text="Select Action"
    />

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_30sdp"
            android:layout_height="wrap_content"
            style="@style/default_linearlayout">

        <FrameLayout
                android:id="@+id/thome_load"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/thome_load_button"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@android:color/transparent" />

            <TextView
                    android:id="@+id/thome_load_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/load"
                    android:gravity="center"
                    android:elevation="16dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
        </FrameLayout>


        <FrameLayout
                android:id="@+id/thome_unload"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_gravity="center">

            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/thome_unload_button"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@android:color/transparent" />

            <TextView
                    android:id="@+id/thome_unload_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/unload"
                    android:gravity="center"
                    android:elevation="16dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
        </FrameLayout>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8" standalone="no"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.DayWorksActivity">

    <Chronometer
        android:id="@+id/day_works_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/day_works_action"
        android:layout_below="@id/day_work_title"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_day_works_day_works_chronometer_text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/day_works_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/day_works_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="16dp"
            android:gravity="center"
            android:text="@string/start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/day_works_button"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:src="@android:color/transparent"
            app:backgroundTint="@color/colorPrimary" />
    </FrameLayout>

    <TextView
        android:id="@+id/day_work_title"
        style="@style/activity_title"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_day_works_day_work_title_text" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/eth_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            style="?attr/cardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="6dp"
            card_view:cardMaxElevation="10dp"
            card_view:contentPadding="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <LinearLayout style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Record Number" />

                <TextView
                        android:id="@+id/eth_record_number"
                        style="@style/load_history_desc"
                        android:text=":  Trenching" />
            </LinearLayout>

            <LinearLayout style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Action" />

                <TextView
                        android:id="@+id/eth_action"
                        style="@style/load_history_desc"
                        android:text=":  Trenching" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lhr_loading_machine_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Start Time" />

                <TextView
                        android:id="@+id/eth_start_time"
                        style="@style/load_history_desc"
                        android:text=":  Excavator 1" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lhr_gps_loading_layout"
                    style="@style/load_history_row_item"
                    >
                <TextView
                        style="@style/load_history_text"
                        android:text="Loading GPS"
                        />
                <TextView
                        android:id="@+id/lhr_gps_loading"
                        style="@style/load_history_desc"
                        android:text=":  Location 1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loaded_material_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="End Time" />

                <TextView
                        android:id="@+id/eth_end_time"
                        style="@style/load_history_desc"
                        android:text=":  Material" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lhr_gps_unloading_layout"
                    style="@style/load_history_row_item"
                    >
                <TextView
                        style="@style/load_history_text"
                        android:text="Loading GPS"
                        />
                <TextView
                        android:id="@+id/lhr_gps_unloading"
                        style="@style/load_history_desc"
                        android:text=":  Location 1"
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lhr_loading_location_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Duration" />

                <TextView
                        android:id="@+id/eth_duration"
                        style="@style/load_history_desc"
                        android:text=":  Location 1" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/eth_totalloads_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Total Loads" />

                <TextView
                        android:id="@+id/eth_totalloads"
                        style="@style/load_history_desc"
                        android:text=":  Location 1" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lhr_loading_weight_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Date" />

                <TextView
                        android:id="@+id/eth_date"
                        style="@style/load_history_desc"
                        android:text=":  Weight1" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lhr_time_layout"
                    style="@style/load_history_row_item">

                <TextView
                        style="@style/load_history_text"
                        android:text="Mode" />

                <TextView
                        android:id="@+id/eth_mode"
                        style="@style/load_history_desc"
                        android:text=":  Morning 7am - 12am" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>

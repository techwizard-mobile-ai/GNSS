<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        tools:context=".activities.common.UnloadTaskActivity">

    <TextView
            style="@style/activity_title"
            android:text="Select Task"
            android:layout_marginBottom="@dimen/_5sdp"
    />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".4"
            android:layout_height="0dp">
        <LinearLayout
                android:id="@+id/ultask_stockpile"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Stockpile"
                    style="@style/ultask_tv"
            />
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/task_stockpile"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ultask_fill"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content">
            <TextView
                    style="@style/ultask_tv"
                    android:text="Fill"
            />
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/task_fill"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="0.4"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="0dp">
        <LinearLayout
                android:id="@+id/ultask_respread"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                    style="@style/ultask_tv"
                    android:text="Respread"
            />
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/task_respread"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ultask_off_site"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content">
            <TextView
                    style="@style/ultask_tv"
                    android:text="Off Site"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/task_off_site"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
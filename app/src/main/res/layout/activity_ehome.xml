<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context=".activities.excavator.EHomeActivity">
    <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
        <TextView

                style="@style/activity_title"
                android:text="Select Action"
                />
        <TextView
                android:id="@+id/ehome_loading"
                style="@style/ehome_tv"
                android:text="Production Digging"
                />
        <TextView
                android:id="@+id/ehome_trenching"
                style="@style/ehome_tv"
                android:text="Trenching"
                />
        <TextView
                android:id="@+id/ehome_digging"
                style="@style/ehome_tv"
                android:text="General Digging"
                />
    </LinearLayout>

    <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/ehome_logout"
            style="@style/next_button_single"
            />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        tools:context=".activities.common.RLoadActivity"
        android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/rl_top"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                        android:visibility="gone"
                        android:id="@+id/rload_title"
                        style="@style/activity_title"
                        android:text="Repeat Journey"
                        />
                <TextView
                        android:id="@+id/trload_machine"
                        android:text="Machine"
                        style="@style/load_tv"
                        />
                <View
                        style="@style/navigation_border"
                        />
                <TextView
                        android:id="@+id/trload_material"
                        style="@style/load_tv"
                        android:text="Material"
                        />

                <View
                        style="@style/navigation_border"
                        />
                <TextView
                        android:id="@+id/trload_location"
                        android:text="Location"
                        style="@style/load_tv"
                        />

                <View
                        style="@style/navigation_border"
                        />
                <TextView
                        android:id="@+id/trload_weight"
                        android:text="Weight461"
                        style="@style/load_tv"
                        />


            </LinearLayout>

    <Button
            android:layout_below="@id/rl_top"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_centerInParent="true"
            android:id="@+id/trload_load"
            style="@style/next_button"
            android:text="Load"
            android:layout_width="match_parent"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            >
        <Button
                android:id="@+id/rload_home"
                style="@style/back_button"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:text="@string/finish"
                android:layout_weight=".3"
                />
        <Button
                android:id="@+id/rload_finish"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/next_button"
                android:layout_marginEnd="0dp"
                android:text="@string/end_work"
                />
    </LinearLayout>
</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        tools:context=".activities.excavator.ELoadTruckActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/elh_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>
    <FrameLayout
            android:id="@+id/load_truck_load"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@android:color/transparent" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Load Truck"
                android:gravity="center"
                android:elevation="16dp"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceLarge" />
    </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
    >
        <Button
                android:id="@+id/load_truck_back"
                style="@style/back_button"
                android:layout_width="0dp"
                android:layout_weight=".3"
        />
        <Button
                android:id="@+id/load_truck_finish"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/next_button"
                android:layout_marginEnd="0dp"
                android:text="Finish"
        />
    </LinearLayout>
</RelativeLayout>